<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="?attr/colorBar">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_title"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listview_practise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:divider="@null"
        android:dividerHeight="@dimen/spacing"
        android:listSelector="@drawable/selector_listview"
        android:paddingStart="@dimen/double_spacing"
        android:paddingEnd="@dimen/double_spacing"
        android:scrollbars="none" />

</RelativeLayout>